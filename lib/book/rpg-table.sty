% Table Header
\newcommand{\header}[1]{{
	\par\vspace*{8pt}
	\noindent
	\rpg@TableTitleFont
	#1}}

% Centered Column
\newcolumntype{Y}{>{\centering\arraybackslash}X}

% Table Environment
\newenvironment{rpg-table}[1][lX]{
	\par\vspace*{-1pt}
	\noindent
    \rpg@TableBodyFont
	%\rowcolors{1}{bgtan}{commentgreen} % Alternate colors
	\rowcolors{1}{monstertandark!50!white}{monstertandark} % Alternate colors
	\tabularx{\linewidth}{#1}
}{
    \endtabularx
    \vspace{-1pt}%8pt plus 1pt}
    \noindent
} 




