% Table Environment
\newenvironment{rpg-table2}[1][lX]{
	\par\vspace*{8pt}
	\noindent
	\fontfamily{lmss}\selectfont %Select font
	\rowcolors{1}{monstertandark!50!white}{monstertandark} % Alternate colors
	\tabularx{\linewidth}{#1}
}
{
    \endtabularx
    \vspace{8pt plus 1pt}
    \noindent
} 

% Long Table Environment
\newenvironment{rpg-longtable}[1][lX]{
	\par\vspace*{8pt}
	\noindent
    \rpg@TableBodyFont
    \rowcolors{1}{tablerow}{alternate-tablerow} % Alternate colors
    \supertabular{#1}
}{
    \endsupertabular
    \vspace{8pt plus 1pt}
    \noindent
} 
